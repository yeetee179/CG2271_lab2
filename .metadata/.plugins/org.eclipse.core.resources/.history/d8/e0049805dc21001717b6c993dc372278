
#include <Arduino.h>
#include <avr/io.h>
#include <FreeRTOS.h>
#include <task.h>
#include <semphr.h>

#define STACK_SIZE 200

int speedValue = 0;
SemaphoreHandle_t speedValueSemaphore = xSemaphoreCreateBinary();

QueueHandle_t speedMessageQueue = xQueueCreate(10, sizeof(int));

