#include <Arduino.h>
unsigned char flag=0;

void isr()
{
	int currentInterruptTime;
	int previousInterruptTime = 0;
	currentInterruptTime = millis(100);
	if(previousInterruptTime - currentInterruptTime > 100){
		flag = !flag;
	}

	previousInterruptTime = currentInterruptTime;

}
void setup()
{
	attachInterrupt(2, isr, RISING);
	pinMode(6, OUTPUT);
}
void loop()
{
	digitalWrite(6, flag);
}
