#include <Arduino.h>
#include <avr/io.h>
#include <FreeRTOS.h>
#include <task.h>
#include <semphr.h>
#include <queue.h>
#define STACK_SIZE 200

QueueHandle_t queue = xQueueCreate(2, 4);

void int0task(){
	for(int i=0; i<5; i++){
	digitalWrite(yellow_led_pin, HIGH); // Set digital I/O pin to a 1
	delay(125); // Delay
	digitalWrite(yellow_led_pin, LOW); // Set digital I/O pin to a 0
	delay(125);
	}
}

// Flashes LED at pin 6: 5 times at 2HZ
void int1task(){
	for(int i=0; i<5; i++){
	digitalWrite(red_led_pin, HIGH); // Set digital I/O pin to a 1
	delay(250); // Delay
	digitalWrite(red_led_pin, LOW); // Set digital I/O pin to a 0
	delay(250);
	}
}

void setup() {
	Serial.begin(115200);
}

void loop() {
	/* create two tasks one with higher priority than the other */
	xTaskCreate(task1and2, "Task1", STACK_SIZE, (void * ) 1, 1, NULL);
	xTaskCreate(task1and2, "Task2", STACK_SIZE, (void * ) 2, 2, NULL);
	xTaskCreate(serialPrint, "SerialPrint", STACK_SIZE, NULL, 3, NULL);
	/* start scheduler */
	vTaskStartScheduler();
}

